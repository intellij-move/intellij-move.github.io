<?xml version="1.0" encoding="UTF-8"?>
<keymap id="intellij_move_keymap">
  <layouts>
    <layout name="Windows" platform="PC"/>
    <layout name="macOS" platform="MAC"/>
    <layout name="Linux" platform="PC"/>
  </layouts>
  <actions>
    <action id="$DeclUsages">
      <description>Declaration or Usages</description>
      <shortcut layout="Windows">Ctrl+B</shortcut>
      <shortcut layout="macOS">⌘ B</shortcut>
      <shortcut layout="Linux">Ctrl+B</shortcut>
    </action>
    <action id="$SearchActions">
      <description>Search for Actions</description>
      <shortcut layout="Windows">Ctrl+Shift+A</shortcut>
      <shortcut layout="macOS">⌘ Shift A</shortcut>
      <shortcut layout="Linux">Ctrl+Shift+A</shortcut>
    </action>
    <action id="$ReformatCode">
      <description>Reformat Code</description>
      <shortcut layout="Windows">Ctrl+Alt+L</shortcut>
<!--      <shortcut layout="macOS">⌘ B</shortcut>-->
      <shortcut layout="Linux">Ctrl+Alt+L</shortcut>
    </action>
    <action id="$ReformatFile">
      <description>Reformat File</description>
      <shortcut layout="Windows">Ctrl+Alt+Shift+L</shortcut>
<!--      <shortcut layout="macOS">⌘ B</shortcut>-->
      <shortcut layout="Linux">Ctrl+Alt+Shift+L</shortcut>
    </action>
    <action id="$ProjectView">
      <description>Open Project View</description>
      <shortcut layout="Windows">Alt+1</shortcut>
      <!--      <shortcut layout="macOS">⌘ B</shortcut>-->
      <shortcut layout="Linux">Alt+1</shortcut>
    </action>
    <action id="$RenameItem">
      <description>Rename Item</description>
      <shortcut layout="Windows">Shift+F6</shortcut>
      <!--      <shortcut layout="macOS">⌘ B</shortcut>-->
      <shortcut layout="Linux">Shift+F6</shortcut>
    </action>
    <action id="$OptimizeImports">
      <description>OptimizeImports</description>
      <shortcut layout="Windows">Ctrl+Alt+O</shortcut>
      <!--      <shortcut layout="macOS">⌘ B</shortcut>-->
      <shortcut layout="Linux">Ctrl+Alt+O</shortcut>
    </action>
  </actions>
</keymap>